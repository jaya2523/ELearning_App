<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/homebg" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="221dp"
        android:layout_height="70dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/candal"
        android:paddingStart="15dp"
        android:paddingLeft="5dp"
        android:textColor="#1E2845"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="350dp"
        android:layout_height="65dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="48dp"
        android:fontFamily="@font/akaya_telivigala"
        android:paddingStart="15dp"
        android:paddingLeft="5dp"
        android:text="What would you like to \nlearn today?"
        android:textColor="#4D4B63"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:paddingStart="15dp"
        android:text="Most Polpular"
        android:textColor="#404B63"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager1"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/viewPager1"
        android:layout_marginTop="-7dp"
        android:fontFamily="sans-serif"
        android:paddingStart="15dp"
        android:text="More Courses"
        android:textColor="#404B63"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="16dp" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:layout_below="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_marginTop="-4dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never"></androidx.viewpager.widget.ViewPager>
</RelativeLayout>